<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.f" xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="rosetracker.RoseTracker.controller.Formula">
	<App>
		<pages>
			<Page showHeader="true" title="Rose Tracker" showFooter="false" showNavButton="true" navButtonPress="onBack" navButtonTooltip="Overview">
				<content>
					<!-- 3.1.1. START	Page Structre: copy above-->
					<!-- 3.1.2. START	Header: copy below-->
					<OverflowToolbar width="auto" height="46px" design="Auto" visible="true" enabled="true">
						<content>
							<!-- TITLE AND HEADER OF THE PAGE -->
							<Title text="Ownership Change" titleStyle="H1" width="auto" textAlign="Begin" visible="true" wrapping="false"/>
							<ToolbarSpacer width=""/>
							<!-- 3.1.2. END	Header: copy above-->
						</content>
					</OverflowToolbar>
					<layout:BlockLayout background="Default" visible="true">
						<layout:content>
							<layout:BlockLayoutRow scrollable="false">
								<layout:content>
									<layout:BlockLayoutCell width="4" title="" titleAlignment="Begin" titleLevel="Auto">
										<layout:content/>
									</layout:BlockLayoutCell>
								</layout:content>
							</layout:BlockLayoutRow>
							<layout:BlockLayoutRow scrollable="false">
								<layout:content>
									<layout:BlockLayoutCell width="2" title="" titleAlignment="Begin" titleLevel="Auto">
										<layout:content>
											<!-- 3.2. START	Form Fragment-->
											<!--INCLUDE THE FRAGMENT FOR THE FORMULA -->
											<core:Fragment fragmentName="rosetracker.RoseTracker.view.Form" type="XML"/>
											<!-- 3.2. END	Form Fragment-->
											<!-- 3.3. START Buttons-->
											<!-- BUTTONS FOR SCAN AND SUBMIT ACTION -->
											<Button text="Scan" press="onPress" icon="sap-icon://bar-code" class="sapUiMediumMargin"/>
											<Button text="Submit" press="onPressSubmit" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true"
												iconDensityAware="false" class="sapUiMediumMargin"/>
											<!-- 3.3. END Buttons-->
										</layout:content>
									</layout:BlockLayoutCell>
								</layout:content>
							</layout:BlockLayoutRow>
						</layout:content>
					</layout:BlockLayout>
					<!-- 3.1.1. END	Page Structre: copy below-->
				</content>
				<headerContent/>
				<subHeader/>
				<customHeader/>
			</Page>
		</pages>
	</App>
</mvc:View>