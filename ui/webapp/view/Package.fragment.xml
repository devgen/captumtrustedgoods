<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Panel expandable="false">
		<!-- table current packages -->
		<Table noDataText="{i18n>nodata}" id="currentPackages" items="{ path : '/PackageView' }">
			<headerToolbar>
				<Toolbar>
					<Title text=""/>
					<ToolbarSpacer/>
					<SearchField id="searchfield" width="50%" search="onFilterPackages"/>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column id="PackageId">
					<Text text="PackageID"/>
				</Column>
				<Column id="Status" minScreenWidth="Tablet" demandPopin="true">
					<Text text="Status"/>
				</Column>
				<Column id="RoseType" minScreenWidth="Desktop" demandPopin="false">
					<Text text="Rose Type"/>
				</Column>
				<Column id="CurrenOwner" minScreenWidth="Desktop" demandPopin="true">
					<Text text="Owner"/>
				</Column>
				<Column id="Location" minScreenWidth="Desktop" demandPopin="true">
					<Text text="Location"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Navigation" press="handleListItemPress">
					<cells>
						<Text text="{PackageID}"/>
							<!-- 1.2 Conditional icon will we displayed -->
						<ObjectStatus state="{IncidentStatus}" icon="{= ${IncidentStatus} === 'Success' ? 'sap-icon://sys-enter' : 'sap-icon://sys-cancel' }"
							visible="true"/>
						<Text text="{RoseType}"/>
						<Text text="{OwnerName}"/>
				<!--		<Text id='currentPackageGeo' text="{parts: ['CurrentLatitude','CurrentLongitude'], formatter: '.convertCoordinatesToAddress'}"/>  -->
						<Text text=" {path: 'OwnerLatitude'}, {path: 'OwnerLongitude'}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Panel>
</core:FragmentDefinition>